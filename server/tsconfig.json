{
  "compilerOptions": {
    "target": "ES2020", // Set target JavaScript version
    "module": "commonjs", // Set module system to CommonJS (Node.js)
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Support for ES module import/export syntax
    "skipLibCheck": true, // Skip checking library declaration files
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src" // Directory where your source files are located
  },
  "include": [
    "src"
  ], // Include the src directory
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}